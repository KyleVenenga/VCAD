<SplashScreen>
    BoxLayout:
        canvas.before:
            Color:
                rgba: 0, 0, 1, .25
            Rectangle:
                pos: self.pos
                size: self.size
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            Image:
                source: 'VCAD.png'
                size: self.texture_size