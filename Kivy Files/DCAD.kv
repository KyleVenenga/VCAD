<DispatchScreen>
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            padding: 10
            orientation: 'horizontal'
            size_hint: 1, .1
            canvas.before:
                Color:
                    rgba: 1, 0, 0, .5
                Rectangle:
                    pos: self.pos
                    size: self.size
            MyLabel:
                id: dispatcherName
            BoxLayout:
            BoxLayout:
            BoxLayout:
                size_hint: .75, 1
                Button:
                    canvas.before:
                        Color:
                            rgba: (0,0,.5,.95) if self.state=='normal' else (.3, 0.3, 0.8, .75)  # visual feedback of press
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [self.height * .5]
                    background_color: 0,0,0,0
                    id: logout
                    font_size: .55 * self.height
                    text: 'Logout'
        BoxLayout:
            # Under banner stuff
            orientation: 'horizontal'
            canvas.before:
                Color:
                    rgba: 0, 0, 1, .25
                Rectangle:
                    pos: self.pos
                    size: self.size
            GridLayout:
                id: call
                padding: self.width * .025 , self.height * .01, self.width * .035, self.height * .025
                rows: 8
                cols: 1
                # Call Creation
                size_hint: 1, 1
                orientation: 'vertical'
                BoxLayout:
                    size_hint: 1, .4
                    padding: 0, 5, 0, 0
                    MyLabel:
                        size_hint: 1, 1
                        text: 'Create Call'
                BoxLayout:
                    size_hint: 1, .75
                    orientation: 'horizontal'
                    MyLabel:
                        text: "   Call Type:  "
                        size_hint: .5, .75
                    BoxLayout:
                        id: type_line
                        padding: 20, 5, 0, 5
                        col: (1, 1, 1, 1)
                        wid: 1
                        canvas.before:
                            Color:
                                rgba: self.col
                            Line:
                                points: self.x + 18, self.y + self.height * .2, self.x + self.width, self.y + self.height * .2
                                width: self.wid
                        TextInput:
                            on_text: type_line.col, type_line.wid = root.changeLineColor(False, self.text)
                            write_tab: False
                            multiline: False
                            on_text_validate: root.streetAddr()
                            background_color: 0, 0, 0, 0
                            foreground_color: .55, 1, .55, 1
                            id: callType
                            font_size: self.height * .55
                            size_hint: 1.5, 1
                BoxLayout:
                    # Call Creation
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint: 1, .75
                        orientation: 'horizontal'
                        MyLabel:
                            size_hint: .5, .75
                            text: "Street Address:"
                        BoxLayout:
                            id: add_line
                            padding: 20, 5, 0, 5
                            col: (1, 1, 1, 1)
                            wid: 1
                            canvas.before:
                                Color:
                                    rgba: self.col
                                Line:
                                    points: self.x + 18, self.y + self.height * .2, self.x + self.width, self.y + self.height * .2
                                    width: self.wid
                            TextInput:
                                on_text: add_line.col, add_line.wid = root.changeLineColor(False, self.text)
                                id: streetAddr
                                write_tab: False
                                multiline: False
                                background_color: 0, 0, 0, 0
                                foreground_color: .55, 1, .55, 1
                                font_size: self.height * .55
                                size_hint: 1.5, .75
                BoxLayout:
                    # Call Creation
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint: 1, .75
                        orientation: 'horizontal'
                        MyLabel:
                            text: "     City:     "
                            size_hint: .5, .75
                        BoxLayout:
                            id: city_line
                            padding: 20, 5, 0, 5
                            col: (1, 1, 1, 1)
                            wid: 1
                            canvas.before:
                                Color:
                                    rgba: self.col
                                Line:
                                    points: self.x + 18, self.y + self.height * .2, self.x + self.width, self.y + self.height * .2
                                    width: self.wid
                            TextInput:
                                on_text: city_line.col, city_line.wid = root.changeLineColor(False, self.text)
                                id: city
                                write_tab: False
                                multiline: False
                                background_color: 0, 0, 0, 0
                                foreground_color: .55, 1, .55, 1
                                font_size: self.height * .55
                                size_hint: 1.5, .75
                BoxLayout:
                    # Call Creation
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint: 1, .75
                        orientation: 'horizontal'
                        MyLabel:
                            text: "   Zip Code:   "
                            size_hint: .5, .75
                        BoxLayout:
                            id: zip_line
                            padding: 20, 5, 0, 5
                            col: (1, 1, 1, 1)
                            wid: 1
                            canvas.before:
                                Color:
                                    rgba: self.col
                                Line:
                                    points: self.x + 18, self.y + self.height * .2, self.x + self.height * 1.5, self.y + self.height * .2
                                    width: self.wid
                            TextInput:
                                on_text: zip_line.col, zip_line.wid = root.changeLineColor(True, self.text)
                                id: zip
                                write_tab: False
                                multiline: False
                                background_color: 0, 0, 0, 0
                                foreground_color: .55, 1, .55, 1
                                font_size: self.height * .55
                                size_hint: 1.5, .75
                                text: ""

                BoxLayout:
                    # Call Creation
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint: 1, .75
                        orientation: 'horizontal'
                        MyLabel:
                            text: "     Place:    "
                            size_hint: .5, .75
                        BoxLayout:
                            padding: 20, 5, 0, 5
                            id: place_line
                            col: (1, 1, 1, 1)
                            wid: 1
                            canvas.before:
                                Color:
                                    rgba: self.col
                                Line:
                                    points: self.x + 18, self.y + self.height * .2, self.x + self.width, self.y + self.height * .2
                                    width: self.wid
                            TextInput:
                                on_text: place_line.col, place_line.wid = root.changeLineColor(False, self.text)
                                id: place
                                write_tab: False
                                multiline: False
                                background_color: 0, 0, 0, 0
                                foreground_color: .55, 1, .55, 1
                                font_size: self.height * .55
                                size_hint: 1.5, .75
                BoxLayout:
                    # Call Creation
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint: 1, .75
                        orientation: 'horizontal'
                        MyLabel:
                            text: "     Phone:    "
                            size_hint: .5, .75
                        BoxLayout:
                            id: phone_line
                            padding: 20, 5, 0, 5
                            col: (1, 1, 1, 1)
                            wid: 1
                            canvas.before:
                                Color:
                                    rgba: self.col
                                Line:
                                    points: self.x + 18, self.y + self.height * .2, self.x + self.width, self.y + self.height * .2
                                    width: self.wid
                            TextInput:
                                on_text: phone_line.col, phone_line.wid = root.changeLineColor(False, self.text)
                                id: phone
                                write_tab: False
                                multiline: False
                                background_color: 0, 0, 0, 0
                                foreground_color: .55, 1, .55, 1
                                font_size: self.height * .55
                                size_hint: 1.5, .75
                BoxLayout:
                    # Call Creation
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint: 1, .75
                        orientation: 'horizontal'
                        MyLabel:
                            text: "  Description: "
                            size_hint: .5, .75
                        BoxLayout
                            id: desc_line
                            padding: 20, 5, 0, 5
                            col: (0, 0, 0, .25)
                            wid: 1
                            canvas.before:
                                Color:
                                    rgba: self.col
                                RoundedRectangle:
                                    pos: (self.x + 10, self.y)
                                    size: self.size
                                    radius: [self.height * .25]
                            TextInput:
                                #on_text: desc_line.col, desc_line.wid = root.changeLineColor(False, self.text)
                                id:  description
                                write_tab: True
                                multiline: True
                                background_color: 0, 0, 0, 0
                                foreground_color: .55, 1, .55, 1
                                font_size: self.height * .25
                                size_hint: 1.5, 1
            OfficerBox:
                id: ob



<OfficerBox>
    padding: 15, 0, 5, 0


<DCADOfficerInfo>
    BoxLayout:
        id: layout
        height: root.height / 10
        orientation: 'horizontal'
        canvas.before:
            Color:
                rgba: 0, 0, 0, .4
            RoundedRectangle:
                radius: [self.height * .5]
                pos: self.pos
                size: self.size
        BoxLayout:
            padding: 2, 3, 3, 2
            orientation: 'vertical'
            MyLabel:
                id: name
                text: 'Name'
            MyLabel:
                id: badgeNum
                text: 'Badge #'
        BoxLayout:
            padding: 5, 5, 5, 5
            ToggleButton:
                canvas.before:
                    Color:
                        rgba: (.1,.1,.85,1) if self.state=='normal' else (.1, 0.2, 0.45, .85)  # visual feedback of press
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [self.height * .5]
                background_color: 0,0,0,0
                id: onScene
                font_size: .55 * self.height
                text: "10-23"
                on_press: root.press23()
        BoxLayout:
            padding: 5, 5, 5, 5
            ToggleButton:
                canvas.before:
                    Color:
                        rgba: (1,0,0,1) if self.state=='normal' else (.4, 0.1, 0.2, .75)  # visual feedback of press
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [self.height * .5]
                background_color: 0,0,0,0
                id: tenSeven
                font_size: .55 * self.height
                text: "10-7"
                on_press: root.press107()
        BoxLayout:
            padding: 5, 5, 5, 5
            ToggleButton:
                background_color: 0,0,0,0
                id: tenEight
                font_size: .55 * self.height
                state: 'down'
                text: '10-8'
                canvas.before:
                    Color:
                        rgba:(.1, .75, 0.1, 1) if self.state=='normal' else (0, .25, 0, .75)   # visual feedback of press
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [self.height * .5]
                on_press: root.press108()
        BoxLayout:
            padding: 5, 5, 5, 5
            Button:
                canvas.before:
                    Color:
                        rgba: (.6,.6,.6,75) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [self.height * .5]
                background_color: 0,0,0,0
                id: send
                font_size: .55 * self.height
                text: 'Send'
                on_press: root.sendBut(int(badgeNum.text))


