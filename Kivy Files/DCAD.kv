<DispatchScreen>
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            padding: 10
            orientation: 'horizontal'
            size_hint: 1, .1
            canvas.before:
                Color:
                    rgba: 1, 0, 0, .5
                Rectangle:
                    pos: self.pos
                    size: self.size
            MyLabel:
                id: dispatcherName
            BoxLayout:
            BoxLayout:
            BoxLayout:
                size_hint: .75, 1
                Button:
                    canvas.before:
                        Color:
                            rgba: (0,0,.5,.95) if self.state=='normal' else (.3, 0.3, 0.8, .75)  # visual feedback of press
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [self.height * .5]
                    background_color: 0,0,0,0
                    id: logout
                    font_size: .55 * self.height
                    text: 'Logout'
        BoxLayout:
            # Under banner stuff
            orientation: 'horizontal'
            canvas.before:
                Color:
                    rgba: 0, 0, 1, .25
                Rectangle:
                    pos: self.pos
                    size: self.size
            GridLayout:
                id: call
                padding: 8
                rows: 8
                cols: 1
                # Call Creation
                size_hint: 1, 1
                orientation: 'vertical'
                BoxLayout:
                    size_hint: 1, .4
                    padding: 0, 5, 0, 0
                    MyLabel:
                        size_hint: 1, 1
                        text: 'Create Call'
                BoxLayout:
                    size_hint: 1, .75
                    orientation: 'horizontal'
                    MyLabel:
                        text: "   Call Type:  "
                        size_hint: .5, .75
                    BoxLayout:
                        padding: 20, 5, 0, 5
                        TextInput:
                            write_tab: False
                            multiline: False
                            on_text_validate: root.streetAddr()
                            background_color: 0, 0, 0, 1
                            foreground_color: 0, 1, 0, .5
                            id: callType
                            font_size: self.height * .55
                            size_hint: 1.5, .75
                BoxLayout:
                    # Call Creation
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint: 1, .75
                        orientation: 'horizontal'
                        MyLabel:
                            size_hint: .5, .75
                            text: "Street Address:"
                        BoxLayout:
                            padding: 20, 5, 0, 5
                            TextInput:
                                id: streetAddr
                                write_tab: False
                                multiline: False
                                background_color: 0, 0, 0, 1
                                foreground_color: 0, 1, 0, .5
                                font_size: self.height * .45
                                size_hint: 1.5, .75
                BoxLayout:
                    # Call Creation
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint: 1, .75
                        orientation: 'horizontal'
                        MyLabel:
                            text: "     City:     "
                            size_hint: .5, .75
                        BoxLayout:
                            padding: 20, 5, 0, 5
                            TextInput:
                                id: city
                                write_tab: False
                                multiline: False
                                background_color: 0, 0, 0, 1
                                foreground_color: 0, 1, 0, .5
                                font_size: self.height * .55
                                size_hint: 1.5, .75
                BoxLayout:
                    # Call Creation
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint: 1, .75
                        orientation: 'horizontal'
                        MyLabel:
                            text: "   Zip Code:   "
                            size_hint: .5, .75
                        BoxLayout:
                            padding: 20, 5, 0, 5
                            TextInput:
                                id: zip
                                write_tab: False
                                multiline: False
                                background_color: 0, 0, 0, 1
                                foreground_color: 0, 1, 0, .5
                                font_size: self.height * .55
                                size_hint: 1.5, .75

                BoxLayout:
                    # Call Creation
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint: 1, .75
                        orientation: 'horizontal'
                        MyLabel:
                            text: "     Place:    "
                            size_hint: .5, .75
                        BoxLayout:
                            padding: 20, 5, 0, 5
                            TextInput:
                                id: place
                                write_tab: False
                                multiline: False
                                background_color: 0, 0, 0, 1
                                foreground_color: 0, 1, 0, .5
                                font_size: self.height * .55
                                size_hint: 1.5, .75
                BoxLayout:
                    # Call Creation
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint: 1, .75
                        orientation: 'horizontal'
                        MyLabel:
                            text: "     Phone:    "
                            size_hint: .5, .75
                        BoxLayout:
                            padding: 20, 5, 0, 5
                            TextInput:
                                id: phone
                                write_tab: False
                                multiline: False
                                background_color: 0, 0, 0, 1
                                foreground_color: 0, 1, 0, .5
                                font_size: self.height * .55
                                size_hint: 1.5, .75
                BoxLayout:
                    # Call Creation
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint: 1, .75
                        orientation: 'horizontal'
                        MyLabel:
                            text: "  Description: "
                            size_hint: .5, .75
                        BoxLayout
                            padding: 20, 5, 0, 5
                            TextInput:
                                id:  description
                                write_tab: True
                                multiline: True
                                background_color: 0, 0, 0, 1
                                foreground_color: 0, 1, 0, .5
                                font_size: self.height * .25
                                size_hint: 1.5, 1
            OfficerBox:
                id: ob



<OfficerBox>
    padding: 15, 0, 5, 0


<DCADOfficerInfo>
    BoxLayout:
        id: layout
        height: root.height / 10
        orientation: 'horizontal'
        canvas.before:
            Color:
                rgba: 0, 0, 0, .4
            RoundedRectangle:
                radius: [self.height * .5]
                pos: self.pos
                size: self.size
        BoxLayout:
            padding: 2, 3, 3, 2
            orientation: 'vertical'
            MyLabel:
                id: name
                text: 'Name'
            MyLabel:
                id: badgeNum
                text: 'Badge #'
        BoxLayout:
            padding: 5, 5, 5, 5
            ToggleButton:
                canvas.before:
                    Color:
                        rgba: (1,0,0,1) if self.state=='normal' else (.4, 0.1, 0.2, .75)  # visual feedback of press
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [self.height * .5]
                background_color: 0,0,0,0
                id: tenSeven
                font_size: .55 * self.height
                text: "10-7"
                background_down: 'images/tenSevenActive.png'
                background_normal: 'images/tenSevenIdle.png'
                on_press: root.press107()
        BoxLayout:
            padding: 5, 5, 5, 5
            ToggleButton:
                background_color: 0,0,0,0
                id: tenEight
                font_size: .55 * self.height
                state: 'down'
                text: '10-8'
                canvas.before:
                    Color:
                        rgba:(.1, .75, 0.1, 1) if self.state=='normal' else (0, .25, 0, .75)   # visual feedback of press
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [self.height * .5]
                on_press: root.press108()
        BoxLayout:
            padding: 5, 5, 5, 5
            Button:
                canvas.before:
                    Color:
                        rgba: (.6,.6,.6,75) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [self.height * .5]
                background_color: 0,0,0,0
                id: send
                font_size: .55 * self.height
                text: 'Send'
                on_press: root.sendBut(int(badgeNum.text))


