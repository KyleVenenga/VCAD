<RoundedButton>
    Button:
        id: but
        background_color: [0, 0, 0, 0]
        pos: root.pos
        font_size: .55 * self.height
        font_color: 1, 1, 1, 1
        size: root.size
        canvas.before:
            Color:
                rgba: (.25,.25,.25,.9) if self.state=='normal' else (.3, .3, .3, 0.9)
            RoundedRectangle:
                radius: [root.height * .55]
                pos: root.pos
                size: root.size